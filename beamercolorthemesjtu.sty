% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=darkblue}

% Headline
\setbeamercolor{headline}{fg=white,bg=sjtu-red}
\setbeamercolor{headline rule}{bg=sjtu-lightgray,fg=sjtu-lightgray}

% Block
\setbeamercolor{block title}{fg=sjtu-red,bg=white}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=sjtu-red,bg=sjtu-lightred}
\setbeamercolor{block alerted separator}{bg=black}
\setbeamercolor{block alerted body}{fg=black,bg=sjtu-lightred}

% Example Block
\setbeamercolor{block example title}{fg=sjtu-red,bg=sjtu-lightgray}
\setbeamercolor{block example separator}{bg=black}
\setbeamercolor{block example body}{fg=black,bg=sjtu-lightgray}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=sjtu-darkred}

